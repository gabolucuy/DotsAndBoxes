<script >
    function validarForm() {
    var x = document.forms["form"]["posX"].value;
    var y = document.forms["form"]["posY"].value;
    if ( x>4  )
      {
        alert("Pos X no puede ser mayor a 5");
        return false;
      }
      if ( y>4 )
        {
          alert("Pos Y no puede ser mayor a 5");
          return false;
        }
        if(x=="" )
        {
          alert("Pos X no puede estar vacio");
          return false;
        }
        if(y=="" )
        {
          alert("Pos Y no puede estar vacio");
          return false;
        }
  }
</script>
